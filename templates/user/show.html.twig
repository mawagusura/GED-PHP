<!DOCTYPE html>

<title>User</title>

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>User_id</th>
                <td>{{ user.userId }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>User_first_name</th>
                <td>{{ user.userFirstName }}</td>
            </tr>
            <tr>
                <th>User_last_name</th>
                <td>{{ user.userLastName }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles }}</td>
            </tr>
            <tr>
                <th>User_deleted</th>
                <td>{{ user.userDeleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'user_id': user.user_id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
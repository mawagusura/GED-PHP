{% extends 'includes/base-template.html.twig' %}

{% block body %}
<div class="col-lg-4 mx-auto jumbotron form">
    <form name="user" method="post">
        <h3>S'inscrire</h3>
        <hr>
        <div class="form-group">
            <label for="form_username">Nom d'utilisateur</label>
            <input type="text" id="form_username" name="form[username]" required="required" placeholder="Nom d'utilisateur" class="form-control"/>
        </div>

        <div class="form-group">
            <label for="form_username">Mot de passe</label>
            <input type="password" id="form_password_first" name="form[password][first]" required="required" placeholder="Mot de passe" class="form-control"/>
        </div>

        <div class="form-group">
            <label for="form_username">Répéter le mot de passe</label>
            <input type="password" id="form_password_second" name="form[password][second]" required="required" placeholder="Répéter mot de passe" class="form-control"/>
        </div>

        <button type="submit" class="btn btn-primary">S'inscrire !</button>
    </form>
</div>

{% endblock %}
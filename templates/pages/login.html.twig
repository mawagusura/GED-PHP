{% extends 'includes/base-template.html.twig' %}

{% block body %}
    <div class="col-lg-4 mx-auto jumbotron form ">
        <form action="{{ path('security_login') }}" method="post">

            <h3 class="form-signin-heading">Se connecter</h3>

            {% if error %}
                <div class="alert alert-dismissible alert-danger">Nom d'utilisateur ou mot de passe incorrect.</div>
            {% endif %}
            <div class="form-group">
                <label for="username">Nom d'utilisateur</label>
                <input type="text" id="username" name="_username" required="required" placeholder="Nom d'utilisateur" class="form-control"/>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" required="required" placeholder="Mot de passe" class="form-control"/>
            </div>

            <label class="checkbox">
                <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe"> Se souvenir de moi
            </label>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
            <a href="{{ path('user_registration') }}">
                <button class="btn btn-lg btn-success register mx-auto col-lg-12 mt-2">S'enregistrer</button>
            </a>
        </form>
    </div>
{% endblock %}